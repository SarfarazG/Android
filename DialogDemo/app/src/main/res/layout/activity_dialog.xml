<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DialogActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Dailog Demo"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblresult"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 button dialogbox"
        android:id="@+id/btnone"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2 button dialogbox"
        android:id="@+id/btntwo"
        android:layout_below="@+id/btnone"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3 button dialogbox"
        android:id="@+id/btnthree"
        android:layout_below="@+id/btntwo"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Multiselect dialogbox"
        android:id="@+id/btncheck"
        android:layout_below="@+id/btnthree"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="radio select dialogbox "
        android:id="@+id/btnradio"
        android:layout_below="@+id/btncheck"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/btndate"
        android:layout_below="@+id/btnradio"
        android:layout_marginTop="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:id="@+id/btntime"
        android:layout_below="@+id/btndate"
        android:layout_marginTop="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Custom_Dialogbox"
        android:id="@+id/btncustom"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/btntime"
        android:id="@+id/linear1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Date is:"
            android:id="@+id/lbldate"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:src="@drawable/datepicker"
            android:id="@+id/ivdate"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="0dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1"
        android:id="@+id/linear2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time is:"
            android:id="@+id/lbltime"
            android:layout_gravity="center_vertical" />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:id="@+id/ivtime"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/time"
            />
    </LinearLayout>
</LinearLayout>


</ScrollView>
