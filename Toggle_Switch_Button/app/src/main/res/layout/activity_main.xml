<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/mylayout"
    >


    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wifi"
        android:id="@+id/swtwifi"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Text Color [Black/Red]"
        android:id="@+id/swtforecolor"
        android:layout_below="@+id/swtwifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:checked="false" />

    <Switch
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FontSize[-/+]"
        android:id="@+id/swtfontsize"
        android:layout_below="@+id/swtforecolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:checked="false" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tgbbackcolor"
        android:checked="false"
        android:text="Gray"
        android:layout_below="@+id/swtfontsize"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btndata"
        android:text="DATA CONNECTION"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnbluetooth"
        android:text="BLUETOOTH"
        android:layout_alignTop="@+id/btndata"
        android:layout_toRightOf="@+id/tgbbackcolor"
        android:layout_toEndOf="@+id/tgbbackcolor" />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA CONNECTION"
        android:id="@+id/tgbbdata"
        android:layout_below="@+id/btnbluetooth"
        android:layout_alignLeft="@+id/btnbluetooth"
        android:layout_alignStart="@+id/btnbluetooth"
        android:layout_marginTop="33dp"
        android:checked="false" />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BLUETOOTH"
        android:id="@+id/tgbbluetooth"
        android:layout_below="@+id/tgbbdata"
        android:layout_alignLeft="@+id/tgbbdata"
        android:layout_alignStart="@+id/tgbbdata"
        android:checked="false" />
    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight_Mode"
        android:id="@+id/tgbflightmode"
        android:layout_below="@+id/tgbbluetooth"
        android:layout_alignLeft="@+id/tgbbluetooth"
        android:layout_alignStart="@+id/tgbbluetooth"
        android:checked="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="DATA CONNECTION"
        android:id="@+id/textView"
        android:layout_above="@+id/tgbbluetooth"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="BLUETOOTH"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/tgbbluetooth"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="FLIGHT_MODE"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/tgbflightmode"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />


</RelativeLayout>
